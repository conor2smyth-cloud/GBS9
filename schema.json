{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Drinks Schema",
  "type": "object",
  "properties": {
    "cocktails": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "base_spirit": { "type": "string" },
          "glass": { "type": "string" },
          "ingredients": { "type": "string" },
          "method_blurb": { "type": "string" },
          "image_filename": { "type": "string" },
          "kegged": { "type": "string" },
          "flavour": { "type": "string" }
        },
        "required": ["name"]
      }
    },
    "beer": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "abv": { "type": "string" },
          "blurb": { "type": "string" },
          "image": { "type": "string" }
        },
        "required": ["name"]
      }
    },
    "spirits": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "base": { "type": "string" },
          "abv": { "type": "string" },
          "cost": { "type": "string" },
          "image_filename": { "type": "string" },
          "country": { "type": "string" },
          "blurb": { "type": "string" }
        },
        "required": ["name"]
      }
    },
    "misc": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "price": { "type": "string" },
          "blurb": { "type": "string" },
          "image": { "type": "string" }
        },
        "required": ["name"]
      }
    },
    "equipment": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "image": { "type": "string" }
        },
        "required": ["name"]
      }
    },
    "glasses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "image": { "type": "string" }
        },
        "required": ["name"]
      }
    },
    "snacks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "image": { "type": "string" }
        },
        "required": ["name"]
      }
    }
  },
  "required": ["cocktails", "beer", "spirits", "misc", "equipment", "glasses", "snacks"]
}
