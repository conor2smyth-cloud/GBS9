{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Drinks Schema",
  "type": "object",
  "properties": {
    "cocktails": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string", "enum": ["cocktails"] },
          "base": { "type": "string" },
          "glass": { "type": "string" },
          "ingredients": {
            "type": "array",
            "items": { "type": "string" }
          },
          "short": { "type": "string" },
          "image": { "type": "string" },
          "kegged": { "type": "string", "enum": ["Yes", "No"] },
          "flavour": { "type": "string" }
        },
        "required": ["name", "type", "base", "glass", "ingredients", "short", "image"]
      }
    },
    "beer": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string", "enum": ["beer"] },
          "image": { "type": "string" }
        },
        "required": ["name", "type", "image"]
      }
    },
    "equipment": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string", "enum": ["equipment"] },
          "image": { "type": "string" }
        },
        "required": ["name", "type", "image"]
      }
    },
    "misc": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string", "enum": ["misc"] },
          "image": { "type": "string" }
        },
        "required": ["name", "type", "image"]
      }
    },
    "glasses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string", "enum": ["glasses"] },
          "image": { "type": "string" }
        },
        "required": ["name", "type", "image"]
      }
    },
    "snacks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string", "enum": ["snacks"] },
          "image": { "type": "string" }
        },
        "required": ["name", "type", "image"]
      }
    }
  },
  "required": ["cocktails", "beer", "equipment"]
}

